<h2>Edit Link</h2>

<form class="" action="<%= link_url(@link) %>" method="post">
  <%= auth_token %>
  <input type="hidden" name="_method" value="patch">

  <label>Title
    <input type="text" name="link[title]" value="<%= @link.title %>">
  </label>

  <label>URL
    <input type="text" name="link[url]" value="<%= @link.url %>">
  </label>

  <input type="submit" name="" value="Update Link">

</form>
